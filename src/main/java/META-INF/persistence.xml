<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="practica.sii" transaction-type="JTA">
		<jta-data-source>java:jboss/datasources/sii</jta-data-source>
		<class>practica.sii.Clases.Noticias</class>
		<class>practica.sii.Clases.Actividades</class>
		<class>practica.sii.Clases.Demanda</class>
		<class>practica.sii.Clases.Alumno</class>
		<class>practica.sii.Clases.ONG</class>
		<class>practica.sii.Clases.PAS</class>
		<class>practica.sii.Clases.PDI</class>
		<class>practica.sii.Clases.Proyecto</class>
		<class>practica.sii.Clases.Universidad</class>
		<class>practica.sii.Clases.Usuario</class>
		<class>practica.sii.Clases.Voluntariado</class>
		<class>practica.sii.Clases.Address</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://192.168.99.100:3306/sii"/>
			<property name="javax.persistence.jdbc.user" value="siiuser"/>
			<property name="javax.persistence.jdbc.password" value="siipassword"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
		</properties>
	</persistence-unit>
</persistence>